{18ID:HUBER1:,    A1In,     H1_An_In_Word,     0,        0x0001,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
{18ID:HUBER1:,    A2In,     H1_An_In_Word,     0,        0x0002,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
{18ID:HUBER1:,    A3In,     H1_An_In_Word,     0,        0x0004,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
{18ID:HUBER1:,    A4In,     H1_An_In_Word,     0,        0x0008,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
{18ID:HUBER1:,    A5In,     H1_An_In_Word,     0,        0x0010,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
{18ID:HUBER1:,    A6In,     H1_An_In_Word,     0,        0x0020,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
{18ID:HUBER1:,    A7In,     H1_An_In_Word,     0,        0x0040,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
{18ID:HUBER1:,    A8In,     H1_An_In_Word,     0,        0x0080,    Out,    In,  NO_ALARM,  MAJOR,  "I/O Intr"}
}
